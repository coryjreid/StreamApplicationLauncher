<Window x:Class="StreamApplicationLauncher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:conv="clr-namespace:StreamApplicationLauncher.Converters"
        xmlns:behaviors="clr-namespace:StreamApplicationLauncher.Behaviors"
        xmlns:viewModels="clr-namespace:StreamApplicationLauncher.ViewModels"
        xmlns:models="clr-namespace:StreamApplicationLauncher.Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <conv:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter" />
        <conv:LogLevelToBackgroundBrushConverter x:Key="LogLevelToBackgroundBrushConverter" />

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ListBox in top row, fills available space -->
        <ListBox Grid.Row="0"
                 ItemsSource="{Binding LogMessages}"
                 Margin="10"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.CanContentScroll="True"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Standard">

            <b:Interaction.Behaviors>
                <behaviors:AutoScrollBehavior ScrollState="{Binding ScrollState}" />
            </b:Interaction.Behaviors>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:LogMessage}">
                    <Grid Margin="0,2"
                          Background="{Binding Level, Converter={StaticResource LogLevelToBackgroundBrushConverter}}"
                          HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" /> <!-- Timestamp -->
                            <ColumnDefinition Width="70" />   <!-- Fixed-width Log Level Block -->
                            <ColumnDefinition Width="*" />    <!-- Log Message -->
                        </Grid.ColumnDefinitions>

                        <!-- Timestamp -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding Timestamp, StringFormat={}{0:MM/dd/yyyy hh:mm:ss tt}}"
                                   Margin="4,0"
                                   VerticalAlignment="Center" />

                        <!-- Log Level block with subgrid -->
                        <Grid Grid.Column="1" Margin="4,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="["
                                       Foreground="{Binding Level, Converter={StaticResource LogLevelToBrushConverter}}"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center" />

                            <TextBlock Grid.Column="1"
                                       Text="{Binding Level}"
                                       Foreground="{Binding Level, Converter={StaticResource LogLevelToBrushConverter}}"
                                       FontWeight="Bold"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Center" />

                            <TextBlock Grid.Column="2"
                                       Text="]"
                                       Foreground="{Binding Level, Converter={StaticResource LogLevelToBrushConverter}}"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center" />
                        </Grid>

                        <!-- Log Message -->
                        <TextBlock Grid.Column="2"
                                   Text="{Binding Message}"
                                   TextWrapping="Wrap"
                                   Margin="4,0"
                                   VerticalAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Bottom bar with Scroll Button + Timer -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left: Duration -->
            <TextBlock Text="{Binding DurationText}"
                       VerticalAlignment="Center"
                       FontWeight="Bold" />

            <!-- Right: Scroll to Bottom Button -->
            <Button Grid.Column="1"
                    Content="Scroll to Bottom"
                    Command="{Binding ScrollToBottomCommand}"
                    HorizontalAlignment="Right"
                    Width="150" />
        </Grid>
    </Grid>
</Window>