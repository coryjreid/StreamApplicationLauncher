<Window x:Class="StreamApplicationLauncher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:conv="clr-namespace:StreamApplicationLauncher.Converters"
        xmlns:behaviors="clr-namespace:StreamApplicationLauncher.Behaviors"
        xmlns:viewModels="clr-namespace:StreamApplicationLauncher.ViewModels"
        xmlns:models="clr-namespace:StreamApplicationLauncher.Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ListBox in top row, fills available space -->
        <ListBox Grid.Row="0"
                 ItemsSource="{Binding LogMessages}"
                 ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                 SnapsToDevicePixels="True"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.CanContentScroll="True"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Standard">

            <b:Interaction.Behaviors>
                <behaviors:AutoScrollBehavior ScrollState="{Binding ScrollState}" />
            </b:Interaction.Behaviors>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:LogMessage}">
                    <Grid Margin="4,0"
                          HorizontalAlignment="Stretch"
                          Background="{Binding Level, Converter={conv:LogLevelToBackgroundBrush}}"
                          SnapsToDevicePixels="True"
                          MinHeight="25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="70" /> <!-- ⬅️ Updated width -->
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Timestamp -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding Timestamp, StringFormat={}{0:MM/dd/yyyy hh:mm:ss tt}}"
                                   VerticalAlignment="Center" />

                        <!-- Log Level -->
                        <Grid Grid.Column="1" Margin="4,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="[" FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding Level, Converter={conv:LogLevelToBrush}}" />
                            <TextBlock Grid.Column="1" Text="{Binding Level}" FontWeight="Bold"
                                       TextAlignment="Center" HorizontalAlignment="Stretch"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding Level, Converter={conv:LogLevelToBrush}}" />
                            <TextBlock Grid.Column="2" Text="]" FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding Level, Converter={conv:LogLevelToBrush}}" />
                        </Grid>

                        <!-- Log Message -->
                        <TextBlock Grid.Column="2"
                                   Text="{Binding Message}"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </Grid>
                </DataTemplate>

            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Bottom bar with Scroll Button + Timer -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left: Duration -->
            <TextBlock Text="{Binding DurationText}"
                       VerticalAlignment="Center"
                       FontWeight="Bold" />

            <!-- Right: Scroll to Bottom Button -->
            <Button Grid.Column="1"
                    Content="Scroll to Bottom"
                    Command="{Binding ScrollToBottomCommand}"
                    HorizontalAlignment="Right"
                    Width="150" />
        </Grid>
    </Grid>
</Window>